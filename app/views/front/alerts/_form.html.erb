<%= form_for [:front, @alert] do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>
  <legend><%= "alert attributes" %></legend>
  <hr>

  <div class="row mb-3">
    <%= f.label :name, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: t("activerecord.attributes.alert.title"), autofocus: true %>
      <div class="form-text">Give a name to your alert.</div>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-2 col">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
