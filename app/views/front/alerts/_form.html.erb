<%= form_for [:front, @alert] do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>
  <legend><%= "alert attributes" %></legend>
  <hr>

  <div class="row mb-3">
    <%= f.label :name, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: t("activerecord.attributes.alert.name"), autofocus: true %>
      <div class="form-text">Give a name to your alert.</div>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :prompt, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.text_field :prompt, class: "form-control", placeholder: t("activerecord.attributes.alert.prompt"), autofocus: true %>
      <div class="form-text">Give a prompt to your alert.</div>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :model, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%=
        f.select(
          :model,
          AI_CLIENT.models,
          { include_blank: "auto" },
          class: "form-select"
        )
      %>
      <div class="form-text">Give a model to your alert.</div>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :schedule, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.text_field :schedule, class: "form-control", placeholder: t("activerecord.attributes.alert.schedule"), autofocus: true %>
      <div class="form-text">Give a schedule to your alert.</div>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-2 col">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
