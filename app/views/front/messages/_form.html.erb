<%=
  form_for(
    [:front, @conversation, @message],
    data: {
      controller: "message-form",
      action: "turbo:submit-end->message-form#submit"
    }
  ) do |f|
%>
  <%= render "/shared/form_errors", :object => f.object %>
  <hr>

  <div class="row mb-3">
    <%= f.label :role, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.select :role, Message.roles, {}, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :content, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control", placeholder: "Ask anything", autofocus: true %>
      <div class="form-text">Ask anything.</div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="offset-sm-2 col">
      <%= f.submit "Send Message", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
