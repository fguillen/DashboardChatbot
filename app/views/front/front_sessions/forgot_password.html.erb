<% title t("views.front_sessions.forgot_password.title") %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="active"><%= t("layouts.breadcrumbs.front_sessions") %></li>
  </ol>
</nav>

<p class="lead">
  <%= t "views.front_sessions.forgot_password.text" %>
</p>

<%= form_for [:front, @front_session], :url => front_forgot_password_path do |f| %>
  <legend>Forgot password</legend>
  <hr>

  <p>Add your email and you will receive a reset password instructions</p>

  <div class="form-group row">
    <%= f.label :email, :class => "col-sm-2 col-form-label text-right" %>

    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend2">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
        <%= f.text_field :email, :class => "form-control", :type => "email", :placeholder => t("activerecord.attributes.front_user.email") %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <%= f.submit "Reset password", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
