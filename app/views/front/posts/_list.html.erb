<div id="posts" class="row row-cols-1 row-cols-sm-2 row-cols-lg-4">
  <% posts.each do |post| %>
    <div class="col mb-4">
      <div class="card post <%= post_custom_style(post) %>">
        <% if post.pic.attached? %>
          <div class="card-img-top text-center">
            <%= image_tag post.pic, class: "" %>
          </div>
        <% end %>

        <div class="card-body">
          <p class="static"><span><span class="font-weight-bold"><%= post.by.name %></span>
          wants to appreciate to</span></p>
          <h5 class="card-title by"><%= post.to_formatted %></h5>
          <p class="static"><span>because</span></p>
          <div class="card-text message"><%= render_markdown(post.message) %></div>
          <%= link_to post.created_at.to_s(:datehuman_long), [:front, post], class: "card-link bottom" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
