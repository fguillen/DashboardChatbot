<%= form_for [:front, @conversation] do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>
  <legend><%= "conversation attributes" %></legend>
  <hr>

  <div class="row mb-3">
    <%= f.label :title, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", placeholder: t("activerecord.attributes.conversation.title") %>
      <div class="form-text">Give a title to your conversation.</div>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-2 col">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
