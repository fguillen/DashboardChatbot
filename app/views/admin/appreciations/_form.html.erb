<%= form_for [:admin, @appreciation] do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>

  <fieldset>
    <legend><%= "Appreciation attributes" %></legend>
    <hr>

    <div class="form-group row">
      <%= f.label :by_slug, class: "col-sm-2 col-form-label text-right"%>

      <div class="col-sm-10">
        <%= f.select(:by_slug, AppreciableUser.all.map { |e| [e.name, e.slug] }, {}, class: "form-control") %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :to_slugs, class: "col-sm-2 col-form-label text-right"%>

      <div class="col-sm-10">
        <%= f.select(:to_slugs, AppreciableUser.all.map { |e| [e.name, e.slug] }, { include_hidden: false }, multiple: true, class: "form-control") %>
      </div>
    </div>


    <div class="form-group row">
      <%= f.label :message, class: "col-sm-2 col-form-label text-right"%>

      <div class="col-sm-10">
        <%= f.text_area :message, class: "form-control", rows: 4, placeholder: t("activerecord.attributes.appreciation.message") %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :pic, class: "col-sm-2 col-form-label text-right"%>

      <div class="col-sm-10">
        <%= f.file_field :pic, class: "form-control-file" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
