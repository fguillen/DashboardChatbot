<%= form_for [:admin, @admin_user] do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>

  <legend><%= "AdminUser attributes" %></legend>
  <hr>

  <div class="row mb-3">
    <%= f.label :name, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: t("activerecord.attributes.admin_user.name") %>
      <div class="form-text">Give a name to your admin_user.</div>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :email, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control", placeholder: t("activerecord.attributes.admin_user.email") %>
      <div class="form-text">Give a email to your admin_user.</div>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :password, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: t("activerecord.attributes.admin_user.password") %>
      <div class="form-text">Give a password to your admin_user.</div>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :password_confirmation, class: "col-sm-2 col-form-label text-end"%>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: t("activerecord.attributes.admin_user.password_confirmation") %>
      <div class="form-text">Confirm the password.</div>
    </div>
  </div>

  <legend><%= t("views.notifications.edit.title") %></legend>
  <hr>

  <% USER_NOTIFICATIONS_ROLES["admin"].each do |notification_name| %>
    <div class="row mb-3">
      <div class="offset-sm-2 col">
        <div class="form-check">
          <%= f.check_box("notifications_active", { :multiple => true, class: "form-check-input", id: "check_#{notification_name}" }, notification_name, "") %>
          <%= f.label :notifications_active, t("views.notifications.notifications_active.#{notification_name}.name"), class: "form-check-label", for: "check_#{notification_name}" %>
          <div class="form-text"><%= t("views.notifications.notifications_active.#{notification_name}.description") %></div>
        </div>
      </div>
    </div>
  <% end %>


  <div class="row">
    <div class="offset-sm-2 col">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
