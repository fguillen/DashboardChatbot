<% title (t "views.appreciable_users.index.title") %>

<ol class="breadcrumb">
  <li class="active"><%= t "layouts.breadcrumbs.appreciable_users" %></li>
</ol>

<p><%= link_to "New AppreciableUser", new_admin_appreciable_user_path, :class => "btn btn-outline-primary" %></p>

<table class="table table-striped table-hover">
  <tr>
    <th><%= t "activerecord.attributes.appreciable_user.slug" %></th>
    <th><%= t "activerecord.attributes.appreciable_user.name" %></th>
    <th><%= t "activerecord.attributes.appreciable_user.email" %></th>
    <th><%= t "activerecord.attributes.appreciable_user.created_at" %> At</th>
  </tr>

  <% @appreciable_users.each do |appreciable_user| %>
    <tr>
      <td><%= link_to appreciable_user.slug, [:admin, appreciable_user] %></td>
      <td><%= link_to appreciable_user.name, [:admin, appreciable_user] %></td>
      <td><%= appreciable_user.email %></td>
      <td><%= appreciable_user.created_at.to_s(:datetimedb) %></td>
    </tr>
  <% end %>
</table>

