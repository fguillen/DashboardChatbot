<% title t("views.posts.show.title", :post_uuid => @post.uuid) %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t("layouts.breadcrumbs.posts"), :admin_posts %></li>
    <li class="breadcrumb-item active"><%= @post.uuid %></li>
  </ol>
</nav>

<dl class="row">
  <dt class="col-sm-2 text-right"><%= t "activerecord.attributes.post.uuid" %></dt><dd class="col-sm-10"><%= @post.uuid %></dd>
  <dt class="col-sm-2 text-right"><%= t "activerecord.attributes.post.title" %></dt><dd class="col-sm-10"><%= @post.title %></dd>
  <dt class="col-sm-2 text-right"><%= t "activerecord.attributes.post.front_user.name" %></dt><dd class="col-sm-10"><%= @post.front_user.name %></dd>
</dl>

<%= @post.body %>

<div class="controls text-right">
  <p>
    <%= link_to t("views.posts.show.edit_button"), edit_admin_post_path(@post), :class => "btn btn-primary" %>
    <%= link_to t("views.posts.show.delete_button"), [:admin, @post], :data => { :confirm => t("views.posts.show.delete_confirmation") }, :method => :delete, :class => "btn btn-danger" %>
  </p>
</div>
