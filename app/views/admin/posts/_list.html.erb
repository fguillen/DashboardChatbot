<table class="table table-striped table-hover">
  <tr>
    <th><%= t "activerecord.attributes.post.uuid" %></th>
    <th><%= t "activerecord.attributes.post.message" %></th>
    <th><%= t "activerecord.attributes.post.created_at" %> At</th>
    <th><%= t "activerecord.attributes.post.by" %></th>
    <th><%= t "activerecord.attributes.post.to" %></th>
  </tr>

  <% posts.each do |post| %>
    <tr>
      <td><%= link_to post.uuid, [:admin, post] %></td>
      <td><%= post.title %></td>
      <td><%= post.created_at.to_s(:datetimedb) %></td>
      <td><%= post.front_user.name %></td>
    </tr>
  <% end %>
</table>
