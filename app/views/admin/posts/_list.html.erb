<table class="table table-striped table-hover">
  <tr>
    <th><%= t "activerecord.attributes.post.uuid" %></th>
    <th><%= t "activerecord.attributes.post.title" %></th>
    <th><%= t "activerecord.attributes.post.tags" %></th>
    <th><%= t "activerecord.attributes.post.created_at" %> At</th>
    <th><%= t "activerecord.attributes.post.front_user.name" %></th>
  </tr>

  <% posts.each do |post| %>
    <tr>
      <td><%= link_to post.uuid, [:front, post] %></td>
      <td><%= post.title %></td>
      <td><%= render_labels(post.tag_list.sort, :tags) %></td>
      <td><%= post.created_at.to_s(:datetimedb) %></td>
      <td><%= post.front_user.name %></td>
    </tr>
  <% end %>
</table>
