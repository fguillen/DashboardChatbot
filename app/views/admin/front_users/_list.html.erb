<table class="table table-striped table-hover">
  <tr>
    <th><%= t "activerecord.attributes.front_user.uuid" %></th>
    <th><%= t "activerecord.attributes.front_user.client" %></th>
    <th><%= t "activerecord.attributes.front_user.name" %></th>
    <th><%= t "activerecord.attributes.front_user.email" %></th>
    <th><%= t "activerecord.attributes.front_user.created_at" %> At</th>
    <th class="text-center"><%= t "views.impersonations.create" %></th>
  </tr>

  <% @front_users.each do |front_user| %>
    <tr>
      <td><%= link_to front_user.uuid, [:admin, front_user] %></td>
      <td><%= link_to front_user.client.name, [:admin, front_user.client] %></td>
      <td><%= link_to front_user.name, [:admin, front_user] %></td>
      <td><%= front_user.email %></td>
      <td><%= front_user.created_at.to_fs(:datetimedb) %></td>
      <td class="text-center">
        <%= button_to admin_impersonations_path(front_user_id: front_user.id), method: :post do %>
          <i class="bi bi-person-badge"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
