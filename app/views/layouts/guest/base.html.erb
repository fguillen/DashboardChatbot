<!doctype html>
<html lang="en">
  <head>
    <%= render "/layouts/guest/header" %>
  </head>

  <body>
    <% if !Rails.env.production? %>
      <div class="environment_badge"><%= Rails.env %></div>
    <% end %>

    <div class="container">
      <%= render "layouts/guest/menu" %>

      <div id="content">
        <% flash.each do |type, message| %>
          <%= content_tag :div, markdown(message).html_safe, :id => "flash_#{type}", :class => bootstrap_alert_class(type.to_sym) %>
        <% end %>

        <%= yield %>
      </div>

      <%= render "layouts/guest/footer" %>
    </div>
  </body>
</html>
