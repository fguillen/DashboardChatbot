<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <%= render "/layouts/admin/header" %>
  </head>

  <body>
    <% if !Rails.env.production? %>
      <div class="environment_badge"><%= Rails.env %></div>
    <% end %>

    <div class="container">
      <div id="content">
        <% flash.each do |type, message| %>
          <%= content_tag :div, markdown(message).html_safe, :id => "flash_#{type}", class: "alert #{bootstrap_alert_class(type.to_sym)}" %>
        <% end %>

        <%= yield %>
      </div>

      <%= render "layouts/admin/footer" %>
    </div>
  </body>
</html>
