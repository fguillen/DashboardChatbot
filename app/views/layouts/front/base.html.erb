<!doctype html>
<html lang="en" data-bs-theme="chat">
  <head>
    <%= render "/layouts/front/header" %>
  </head>

  <body>
    <% if !Rails.env.production? %>
      <div class="environment_badge"><%= Rails.env %></div>
    <% end %>

    <div class="container d-flex flex-column vh-100">
      <%= render "layouts/front/menu" %>

      <div id="content" class="flex-grow-1 d-flex flex-column">
        <% flash.each do |type, message| %>
          <%= content_tag :div, markdown(message).html_safe, :id => "flash_#{type}", :class => bootstrap_alert_class(type.to_sym) %>
        <% end %>

        <%= yield %>
      </div>

      <%= render "layouts/front/footer" %>
    </div>
  </body>
</html>
