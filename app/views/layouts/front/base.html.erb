<!doctype html>
<html lang="en-US" dir="ltr" data-navigation-type="horizontal" data-navbar-horizontal-shape="default" data-bs-theme="dark">
  <head>
    <%= render "/layouts/front/header" %>
  </head>

  <body data-turbo="false">
    <% if !Rails.env.production? %>
      <div class="environment_badge"><%= Rails.env %></div>
    <% end %>

    <main id="top">
      <%= render "layouts/front/menu" %>

      <div class="content container-fluid">
        <% flash.each do |type, message| %>
          <div class="toast show w-100 <%= bootstrap_alert_class(type.to_sym) %>" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
            <div class="toast-header">
              <strong class="me-auto"><%= type %></strong><small class="text-body-secondary"></small>

              <button class="btn ms-2 p-0" type="button" data-bs-dismiss="toast" aria-label="Close"><span class="uil uil-times fs-7"></span></button>
            </div>
            <div class="toast-body"><%= markdown(message).html_safe %></div>
          </div>
        <% end %>

        <%= yield %>

        <%= render "layouts/front/footer" %>
      </div>
    </div>

    <%= render "layouts/front/javascripts" %>
  </body>
</html>
